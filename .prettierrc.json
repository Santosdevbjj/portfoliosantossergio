{
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "singleAttributePerLine": true,
  "embeddedLanguageFormatting": "auto",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",

  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],

  "// Import Sorting Config": "Alinhado com a estrutura de pastas src/ do projeto",
  "importOrder": [
    "^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@/types/(.*)$",
    "^@/dictionaries/(.*)$",
     "^@/config/(.*)$",
    "^@/domain/(.*)$",
    // "^@/services/(.*)$",
    "^@/lib/(.*)$",
    "^@/hooks/(.*)$",
    "^@/components/(.*)$",
    "^@/styles/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,

  "// Tailwind Config": "Detecta classes em cn(), clsx e atributos personalizados",
  "tailwindAttributes": ["className", "class", "tw"],
  "tailwindFunctions": ["clsx", "twMerge", "twJoin", "cn", "cva"],
  "tailwindConfig": "./tailwind.config.ts",

  "overrides": [
    {
      "files": [
        "src/app/api/**/*",
        "src/app/**/og.*"
      ],
      "options": {
        "printWidth": 120,
        "bracketSameLine": true,
        "singleAttributePerLine": false
      }
    },
    {
      "files": ["*.json", "*.jsonc", ".prettierrc"],
      "options": {
        "parser": "json",
        "singleQuote": false
      }
    }
  ]
}
