# EditorConfig: Padronização Universal de Código
# Projeto: Portfolio Sérgio Santos
# Garante consistência entre IDEs e previne "diffs" sujos no Git.

root = true

# ======================================================
# Configuração global
# ======================================================
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# ======================================================
# Markdown, MDX e Conteúdo Editorial
# Preserva espaços finais para <br> e formatação semântica
# ======================================================
[*.{md,mdx}]
trim_trailing_whitespace = false
indent_size = 2

# ======================================================
# Engenharia de Dados e Backend
# Python segue PEP8 | SQL legível
# ======================================================
[*.{py,sql}]
indent_style = space
indent_size = 4

# Jupyter Notebooks (JSON – formatação externa apenas)
[*.ipynb]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# ======================================================
# Desenvolvimento Web Moderno
# Next.js 15/16 • TypeScript • CSS • Infra YAML
# ======================================================
[*.{js,jsx,ts,tsx,cjs,mjs,cts,mts,css,scss,html,yml,yaml,toml}]
indent_style = space
indent_size = 2

# ======================================================
# Arquivos Estruturados e SEO
# ======================================================
[*.{json,xml,webmanifest}]
indent_style = space
indent_size = 2

# ======================================================
# Variáveis de Ambiente (Segurança)
# ======================================================
[*.env*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# ======================================================
# Scripts de Shell e Infra
# ======================================================
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 4

[Dockerfile]
indent_style = space
indent_size = 4

# ======================================================
# Makefiles (exigem TAB real)
# ======================================================
[Makefile]
indent_style = tab
indent_size = 4

# ======================================================
# Dados Brutos e Logs
# ======================================================
[*.{csv,log}]
trim_trailing_whitespace = false
insert_final_newline = false

# Lockfiles (mantém newline por compatibilidade)
[*.lock]
trim_trailing_whitespace = false

# ======================================================
# Ativos Binários e Arquivos Não-Textuais
# ======================================================
[*.{png,jpg,jpeg,gif,webp,ico,pdf,woff,woff2}]
insert_final_newline = false
trim_trailing_whitespace = false
