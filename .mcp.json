{
  "mcpServers": {
    "next-devtools": {
      "description": "Next.js 16 DevTools MCP",
      "command": "node",
      "args": ["mcp-env.js"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "typescript-analyzer": {
      "description": "TypeScript 6.0 Analyzer",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-typescript",
        "--project",
        "tsconfig.json"
      ]
    },
    "i18n-dictionary-helper": {
      "description": "Auxiliar de dicionários e traduções",
      "command": "npx",
      "args": [
        "-y",
        "mcp-server-filesystem",
        "./src/dictionaries"
      ]
    }
  }
}
