{
  "compilerOptions": {
    /* NATIVE RUNTIME & TARGET (Baseline Feb/2026) */
    "target": "ESNext", 
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    
    /* TSGO ENGINE OPTIMIZATION (Project Corsa) */
    "verbatimModuleSyntax": true,   // Separação rigorosa de tipos para build ultra-rápido
    "isolatedModules": true,         
    "moduleDetection": "force",      
    
    /* RIGOR DE MISSÃO CRÍTICA (Zero Runtime Errors) */
    "strict": true,
    "noUncheckedIndexedAccess": true, // Vital para segurança de dados no seu i18n
    "exactOptionalPropertyTypes": true, 
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,     // Mantemos false para facilitar o desenvolvimento de interfaces
    
    /* NEXT.JS 16 & REACT 19 ARCHITECTURE */
    "module": "ESNext",
    "moduleResolution": "Bundler",   
    "jsx": "react-jsx",
    "noEmit": true,                  
    "allowImportingTsExtensions": true, // Necessário para alguns padrões de 2026
    
    /* INTEROP & SECURITY */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true,

    /* INFRASTRUCTURE PATHS */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* NATIVE BUILD CACHE */
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo",

    /* PLUGINS */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/**/*.d.ts" // Garante que seus tipos customizados de ícones e CSS sejam lidos
  ],

  "exclude": ["node_modules", ".next", "out"]
}
