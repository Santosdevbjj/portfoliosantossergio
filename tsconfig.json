{
  "compilerOptions": {
    /* NATIVE RUNTIME & TARGET (Baseline Jan/2026) */
    "target": "ES2024", 
    "lib": ["DOM", "DOM.Iterable", "ES2024", "ESNext"],
    
    /* TSGO ENGINE OPTIMIZATION (Project Corsa) */
    "verbatimModuleSyntax": true,   // Essencial para o compilador em Go: separa tipos de runtime com custo zero
    "isolatedModules": true,         // Garante que cada arquivo seja tratável de forma independente e paralela
    "moduleDetection": "force",      // Força o escopo de módulo em todos os arquivos para evitar colisões no Global Cache
    
    /* RIGOR DE MISSÃO CRÍTICA (Prevenção de Erro 500) */
    "strict": true,
    "noUncheckedIndexedAccess": true, // Evita undefined em dicionários de tradução (Vital para o seu i18n)
    "exactOptionalPropertyTypes": true, // Impede a atribuição de 'undefined' a propriedades opcionais
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    
    /* NEXT.JS 16 & REACT 19 ARCHITECTURE */
    "module": "ESNext",
    "moduleResolution": "Bundler",   // Otimizado para o Turbopack nativo
    "jsx": "react-jsx",
    "noEmit": true,                  // Delegamos a geração de código para o Turbopack/tsgo
    
    /* INTEROP & SECURITY */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,            // Aumenta a velocidade focando apenas no seu código-fonte
    "forceConsistentCasingInFileNames": true,

    /* INFRASTRUCTURE PATHS */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* NATIVE BUILD CACHE */
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo",

    /* PLUGINS */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vercel.ts" // Incluído para validar sua configuração programática
  ],

  "exclude": ["node_modules"]
}
