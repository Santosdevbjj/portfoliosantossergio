{
  "compilerOptions": {
    /* CORE TARGET & RUNTIME (Node.js 24 + 2026 Standards) */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* STRICTNESS (Rigor de Missão Crítica) */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    /* EMIT & MODULE RESOLUTION */
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* INTEROP & MODERN JS */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,

    /* PROJECT STRUCTURE */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* PERFORMANCE & CACHE */
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo",

    /* NEXT.JS PLUGIN */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/proxy.tsx",
    "src/ProxyClient.tsx", 
    "src/dictionaries/*.json"
  ],

  "exclude": ["node_modules"]
}
