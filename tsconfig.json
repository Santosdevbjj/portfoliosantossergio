{
  "compilerOptions": {
    /* NATIVE RUNTIME & TARGET (Baseline Feb/2026) */
    "target": "ES2022", 
    "lib": ["dom", "dom.iterable", "esnext"],
    
    /* TSGO ENGINE OPTIMIZATION (Next.js 16 Turbopack) */
    "verbatimModuleSyntax": true,   
    "isolatedModules": true,         
    "moduleDetection": "force",      
    
    /* RIGOR DE MISSÃO CRÍTICA (Zero Runtime Errors) */
    "strict": true,
    "noUncheckedIndexedAccess": true, 
    "exactOptionalPropertyTypes": true, 
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,     
    
    /* NEXT.JS 16 & REACT 19 ARCHITECTURE */
    "module": "ESNext",
    "moduleResolution": "Bundler",   
    "jsx": "preserve",               /* Alterado para 'preserve' para compatibilidade total com Turbopack */
    "noEmit": true,                  
    
    /* INTEROP & SECURITY */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true,

    /* INFRASTRUCTURE PATHS */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* NATIVE BUILD CACHE */
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo",

    /* PLUGINS */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/**/*.d.ts"
  ],

  "exclude": [
    "node_modules", 
    ".next", 
    "out",
    "build" /* Adicionado para evitar conflitos de cache local */
  ]
}
