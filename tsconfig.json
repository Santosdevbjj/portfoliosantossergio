{
  "compilerOptions": {
    /* --- MOTOR NATIVO TS 6.0 & NEXT.JS 16 --- */
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler", 
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    
    /* --- RIGOR DE MISSÃO CRÍTICA --- */
    "strict": true,
    "noUncheckedIndexedAccess": true, 
    "exactOptionalPropertyTypes": true, 
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, 

    /* --- NEXT.JS 16 & REACT 19 ARCHITECTURE --- */
    "jsx": "preserve", /* Alterado para 'preserve' para delegar ao SWC do Next.js */
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsconfig.tsbuildinfo",
    
    /* --- INTEROP & SECURITY --- */
    "esModuleInterop": true,         
    "resolveJsonModule": true,
    "allowJs": true, /* Alterado para true: sua lista tem 'mcp-env.js' e 'eslint.config.js' */
    "skipLibCheck": true,          
    "forceConsistentCasingInFileNames": true,

    /* --- PERFORMANCE & TYPES --- */
    "types": ["node"],

    /* --- INFRASTRUCTURE PATHS (Alinhado com sua estrutura src/) --- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./src/*"]
    },

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*",         /* Cobre toda sua estrutura de dicionários e libs */
    "next.config.ts",
    "tests/**/*.ts"     /* Adicionado para cobrir seu 'tests/i18n.spec.ts' */
  ],

  "exclude": [
    "node_modules", 
    ".next", 
    "out",
    "dist",
    "build"
  ]
}
