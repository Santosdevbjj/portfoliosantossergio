{
  "compilerOptions": {
    /* Base moderna (Node.js 24 + Next.js 16) */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",

    /* Tipagem estrita e confiável */
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Interoperabilidade ESM e JSON */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,

    /* Segurança adicional */
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Evita ruído de libs externas */
    "skipLibCheck": true,

    /* Organização de paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Plugin oficial Next.js */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "src/proxy.ts",
    "eslint.config.mjs",
    "next.config.mjs"
  ],

  "exclude": ["node_modules"]
}
