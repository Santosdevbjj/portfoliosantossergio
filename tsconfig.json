{
  "compilerOptions": {
    /* ---------------------------------------------------------------------- */
    /* CORE TARGET & RUNTIME (Node 24 / TS 5.7)                               */
    /* ---------------------------------------------------------------------- */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* ---------------------------------------------------------------------- */
    /* STRICTNESS (ENTERPRISE LEVEL)                                           */
    /* ---------------------------------------------------------------------- */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,

    /* ---------------------------------------------------------------------- */
    /* EMIT & MODULE RESOLUTION (Updated for TS 5.4+)                         */
    /* ---------------------------------------------------------------------- */
    "noEmit": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* ---------------------------------------------------------------------- */
    /* INTEROP & MODERN JS                                                     */
    /* ---------------------------------------------------------------------- */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,

    /* ---------------------------------------------------------------------- */
    /* PROJECT STRUCTURE                                                       */
    /* ---------------------------------------------------------------------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ---------------------------------------------------------------------- */
    /* PERFORMANCE                                                             */
    /* ---------------------------------------------------------------------- */
    "incremental": true,
    "skipLibCheck": true,

    /* ---------------------------------------------------------------------- */
    /* NEXT.JS PLUGIN                                                          */
    /* ---------------------------------------------------------------------- */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/proxy.ts",
    "new-types.d.ts"
  ],

  "exclude": ["node_modules"]
}
