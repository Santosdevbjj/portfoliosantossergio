{
  "compilerOptions": {
    /* ---------------------------------------------------------------------- */
    /* BASE MODERNA — Next.js 16 + Node.js 24                                  */
    /* ---------------------------------------------------------------------- */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "useDefineForClassFields": true,

    /* ---------------------------------------------------------------------- */
    /* STRICTNESS — Segurança máxima                                           */
    /* ---------------------------------------------------------------------- */
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,

    /* ---------------------------------------------------------------------- */
    /* INTEROPERABILIDADE                                                      */
    /* ---------------------------------------------------------------------- */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,

    /* ---------------------------------------------------------------------- */
    /* PERFORMANCE / DX                                                        */
    /* ---------------------------------------------------------------------- */
    "incremental": true,
    "skipLibCheck": true,

    /* ---------------------------------------------------------------------- */
    /* TYPES                                                                   */
    /* ---------------------------------------------------------------------- */
    "types": ["node"],

    /* ---------------------------------------------------------------------- */
    /* PATH ALIASES                                                            */
    /* ---------------------------------------------------------------------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ---------------------------------------------------------------------- */
    /* NEXT.JS PLUGIN                                                          */
    /* ---------------------------------------------------------------------- */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "src/proxy.ts",
    "eslint.config.mjs",
    "next.config.mjs"
  ],

  "exclude": ["node_modules"]
}
