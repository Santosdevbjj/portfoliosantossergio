{
  "compilerOptions": {
    /* --- MOTOR NATIVO & COMPATIBILIDADE NEXT.JS 16 --- */
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext", "es2025"],
    "module": "ESNext",              // Ajustado: ESNext garante compatibilidade com o pipeline do Turbopack
    "moduleResolution": "Bundler",   // Ajustado: Essencial para o TS encontrar 'next/navigation' em 2026
    "verbatimModuleSyntax": true,   
    "isolatedDeclarations": true,    // MANTIDO: Crucial para o futuro motor nativo (Go)
    "moduleDetection": "force",
    "noEmit": true,

    /* --- RIGOR DE MISSÃO CRÍTICA (Zero Runtime Errors) --- */
    "strict": true,
    "noUncheckedIndexedAccess": true, 
    "exactOptionalPropertyTypes": true, 
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, 
    "noUncheckedSideEffectImports": true, 

    /* --- PERFORMANCE: EXPLICIT TYPES --- */
    "types": ["node", "react", "react-dom"], 
    "stableTypeOrdering": true,      

    /* --- NEXT.JS 16 & REACT 19 ARCHITECTURE --- */
    "jsx": "react-jsx",
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo",
    
    /* --- INTEROP & SECURITY --- */
    "esModuleInterop": true,         
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,          
    "forceConsistentCasingInFileNames": true,

    /* --- INFRASTRUCTURE PATHS --- */
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./src/*"]
    },

    /* --- DEBUGGING & AUDIT --- */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",           // O log da Vercel pediu essa atualização
    ".next/dev/types/**/*.ts"        // Adicionado para paridade com o ambiente local
  ],

  "exclude": [
    "node_modules", 
    ".next", 
    "out",
    "build"
  ]
}
