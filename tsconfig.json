{
  "compilerOptions": {
    /* ---------------------------------------------------------------------- */
    /* CORE TARGET & RUNTIME                                                  */
    /* ---------------------------------------------------------------------- */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* ---------------------------------------------------------------------- */
    /* STRICTNESS (Equilíbrio Sênior: Seguro mas compatível)                 */
    /* ---------------------------------------------------------------------- */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,

    /* ---------------------------------------------------------------------- */
    /* EMIT & MODULE RESOLUTION (Ajustado para Next.js 16)                    */
    /* ---------------------------------------------------------------------- */
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* ---------------------------------------------------------------------- */
    /* INTEROP & MODERN JS                                                     */
    /* ---------------------------------------------------------------------- */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,

    /* ---------------------------------------------------------------------- */
    /* PROJECT STRUCTURE                                                       */
    /* ---------------------------------------------------------------------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ---------------------------------------------------------------------- */
    /* PERFORMANCE                                                             */
    /* ---------------------------------------------------------------------- */
    "incremental": true,

    /* ---------------------------------------------------------------------- */
    /* NEXT.JS PLUGIN                                                          */
    /* ---------------------------------------------------------------------- */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
