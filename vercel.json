{
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "cleanUrls": true,
  "regions": ["gru1"], 
  "functions": {
    "src/app/**/*.ts": {
      "runtime": "edge",
      "memory": 512,
      "maxDuration": 10
    },
    "src/app/**/*.tsx": {
      "runtime": "edge",
      "memory": 512,
      "maxDuration": 10
    },
    "src/app/api/**/*.ts": {
      "runtime": "edge",
      "memory": 1024,
      "maxDuration": 15
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=86400" }
      ]
    }
  ]
}
